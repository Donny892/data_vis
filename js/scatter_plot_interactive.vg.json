{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Population Density per Country",
  "width": "container",
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/Donny892/data_vis/main/data/pop_density.csv",
    "format": {
      "parse": {
        "Population_Density": "number",
        "Surface_area": "number",
        "Population": "number"   
      }
    } 
  },
  "params": [
    {
      "name": "Population_Density_Above",
      "value": 1,
      "bind": {"input": "range", "min": 0, "max": 10000, "step": 10}
    }
  ],
  "selection": {
    "continent_selection": {
      "type": "multi", "fields": ["Continent"], "bind": "legend"
    }
  },
  "transform":[
    {"filter": "datum.Population_Density > Population_Density_Above"}
  ],
  "encoding": {
    "x": {
      "field": "Surface_area",
      "type": "quantitative",
      "title": "Land Surface Area (sq. km)",
      "axis": {"tickCount": 6},
      "scale": {"type": "log", "domain": [10, 30000000]}
    },
    "y": {
      "field": "Population_Density",
      "title": "Population Density (People per sq. km)",
      "type": "quantitative",
      "axis": {"tickCount": 5},
      "scale": {"type": "log", "domain": [1, 100000]}
    }
  },
  "layer": [
    {
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "Population",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [1000000, 5000000, 10000000, 50000000, 100000000, 500000000, 1000000000],
            "range": [20, 40, 75, 100, 250, 500, 1000, 2500]
          },
          "legend": {"format": ".1s"}
        },
        "color": {
          "field": "Continent",
          "type": "nominal",
          "scale": {
            "domain": [
              "North America",
              "South America",
              "Europe",
              "Africa",
              "Asia",
              "Oceania"
            ],
            "range": [
              "#7fc97f",
              "#beaed4",
              "#fdc086",
              "#ffff99",
              "#386cb0",
              "#f0027f"
            ]
          }
        },
        "opacity": {"value": 0.9},
        "tooltip": [
                    {
            "field": "Country Name",
            "title": "Country",
            "type": "ordinal"
          },
          {
            "field": "Population",
            "type": "quantitative",
            "format": ".4s"
          },
          {
            "field": "Surface_area",
            "type": "quantitative",
            "format": ".4s"
          },
          {
            "field": "Population_Density",
            "type": "quantitative",
            "format": ".0f"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "Country Name", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
            "condition": {
            "test": "datum['Country Name'] == 'Australia' || datum['Country Name'] == 'Mongolia' || datum['Country Name'] == 'Singapore'|| datum['Country Name'] == 'India'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {
            "field": "Country Name",
            "type": "ordinal"
          },
          {
            "field": "Population",
            "type": "quantitative",
            "format": ".4s"
          },
          {
            "field": "Surface_area",
            "title": "Surface Area (sq. km)",
            "type": "quantitative",
            "format": ".4s"
          },
          {
            "field": "Population_Density",
            "title": "Population Density",
            "type": "quantitative",
            "format": ".1f"
          }
        ]
      }
    }
  ]
}